<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/midnight_purple"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ini Fragment 1"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnKeFragment1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="buka fragment 1"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/dusty_rose"/>

    <Button
        android:id="@+id/btnKeFragment2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="buka fragment 2"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/dusty_rose"/>

    <Button
        android:id="@+id/btnKeFragment3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="buka fragment 3"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/dusty_rose"/>

    <Button
        android:id="@+id/btnKeMainActivity"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Kembali ke Main Activity"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/dusty_rose"/>

</LinearLayout>