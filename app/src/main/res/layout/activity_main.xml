<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnSimpleListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginTop="170dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:text="Simple List View"/>

    <Button
        android:id="@+id/btnCustomListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:text="Custom List View"/>

    <Button
        android:id="@+id/btnCoordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:text="Coordinator Layout" />

    <Button
        android:id="@+id/btnFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:text="Fragment" />

    <Button
        android:id="@+id/btnNavigationDrawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:text="Navigation Drawer"/>
</LinearLayout>